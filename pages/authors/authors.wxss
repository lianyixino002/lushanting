.authors {
  background-color: #21272e;
  padding: 40rpx 0rpx 0 50rpx;
}

.authors .new {
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #343946;
  padding-right: 50rpx;
}

.authors .new .works {
  height: 375rpx;
  display: flex;
  position: relative;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.authors .new .works.big {
  height: 360rpx;
  margin-top: 15rpx;
  margin-bottom: 30rpx;
}

.authors .new .works image {
  border: 4rpx solid #fff;
  border-radius: 100%;
  margin-top: 30rpx;
}

.authors .new .works .huangguan {
  color: #f44380;
  font-size: 60rpx;
  position: absolute;
  top: 13rpx;
}

.authors .new .works .iconCount {
  color: #f44380;
  border-left: 3rpx solid #fff;
  border-right: 3rpx solid #fff;
  border-radius: 50%;
  position: absolute;
  top: 200rpx;
  background-color: #fff;
  font-size: 40rpx;
}

.authors .new .works .authorName {
  color: #f44380;
  margin-top: 35rpx;
  font-size: 34rpx;
}

.authors .new .works .fansC {
  font-size: 26rpx;
  color: #a2a8ba;
  margin-top: 10rpx;
}

.authors .new .works.big .huangguan {
  top: -13rpx;
  color: #fdaf01;
}

.authors .new .works.big .iconCount {
  color: #fdaf01;
  top: 210rpx;
}

.authors .new .works.big .authorName {
  color: #fdaf01;
}

.authors .new .works.three .huangguan {
  color: #00a2ff;
}

.authors .new .works.three .iconCount {
  color: #00a2ff;
}

.authors .new .works.three .authorName {
  color: #00a2ff;
}

.future {
  width: 160rpx;
  height: 160rpx;
}

.future1 {
  width: 200rpx;
  height: 200rpx;
}

.book-name {
  color: #fff;
  font-size: 27rpx;
}

.writer-name {
  display: block;
  font-size: 25rpx;
  color: #5d637c;
}

.classification {
  line-height: 140rpx;
  display: flex;
  justify-content: space-between;
  margin-right: 50rpx;
}

.rank {
  color: #fff;
  font-size: 34rpx;
}

.see {
  color: #a2a8ba;
  font-size: 23rpx;
}

.arrow {
  color: #a2a8ba;
  font-size: 20rpx;
  vertical-align: middle;
}

.imgs {
  height: 120rpx;
  width: 120rpx;
}

.type {
  color: #fff;
  display: block;
  text-align: center;
}

.swi {
  width: 125rpx !important;
  text-align: center;
  padding-right: 35rpx !important;
}

.classification-bottom {
  margin-right: 20rpx;
}

.authors .popular .scroll-view_H .scrollOuter .hotA .follows, .follow {
  display: block;
  text-align: center;
  color: #fff;
  margin-top: 20rpx;
  border-radius: 15rpx;
  border: 2px solid #545d66;
  font-size: 23rpx;
}

.authors .popular .scroll-view_H .scrollOuter .hotA .follows {
  background-color: #478ce0;
  border-color: #478ce0;
}

.authors .popular .scroll-view_H {
  border-bottom: 2rpx solid #343946;
  width: 100%;
  padding-bottom: 75rpx;
}

.authors .popular .scroll-view_H .scrollOuter {
  width: 100%;
  display: flex;
}

.authors .popular .scroll-view_H .scrollOuter .hotA {
  width: 120rpx;
  margin-right: 48rpx;
}
