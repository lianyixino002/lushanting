.authors {
  background-color: #21272e;
  padding: 40rpx 0rpx 0 50rpx;
}

.authors .new {
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #343946;

  padding-right: 50rpx;
}

.authors .new .works {
  height: 375rpx;
  display: flex;
  position: relative;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.authors .new .works.big {
  height: 360rpx;
  margin-top: 15rpx;
  margin-bottom: 30rpx;
}

.authors .new .works image {
  border: 4rpx solid #fff;
  border-radius: 100%;
  margin-top: 30rpx;
}

.authors .new .works .huangguan {
  color: #f44380;
  font-size: 60rpx;
  position: absolute;
  top: 13rpx;
}

.authors .new .works .iconCount {
  color: #f44380;
  border: 3rpx solid #fff;
  border-radius: 50%;
  position: absolute;
  top: 200rpx;
  background-color: #fff;
  font-size: 40rpx;
}

.authors .new .works .authorName {
  color: #f44380;
  margin-top: 35rpx;
  font-size: 34rpx;
}

.authors .new .works .fansC {
  font-size: 26rpx;
  color: #a2a8ba;
  margin-top: 10rpx;
}

.authors .new .works.big .huangguan {
  top: -13rpx;
  color: #fdaf01;
}

.authors .new .works.big .iconCount {
  color: #fdaf01;
  top: 210rpx;
}

.authors .new .works.big .authorName {
  color: #fdaf01;
}

.authors .new .works.three .huangguan {
  color: #00a2ff;
}

.authors .new .works.three .iconCount {
  color: #00a2ff;
}

.authors .new .works.three .authorName {
  color: #00a2ff;
}

