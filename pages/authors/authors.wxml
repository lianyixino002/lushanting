<view class="authors">
  <view class="new">
    <view class="works">
      <text class="icon2 icon5 iconfont icon-huangguan huangguan"></text>
      <image class="future" src="../../assets/images/authorDH.png"></image>
      <text class="icon4 icon2 iconfont icon-2 iconCount"></text>
      <text class="authorName">余秋雨</text>
      <text class="writer-name fansC">8888粉丝</text>
    </view>
    <view class="works big">
      <text class="icon1 icon6 iconfont icon-huangguan huangguan"></text>
      <image bindtap="first" class="future1" src="../../assets/images/authorDH.png"></image>
      <text class="icon1 icon7 iconfont icon-1 iconCount"></text>
      <text class="authorName">余秋雨</text>
      <text class="writer-name fansC">8888粉丝</text>
    </view>
    <view class="works three">
      <text class="icon3 icon8 iconfont icon-huangguan huangguan"></text>
      <image class="future" src="../../assets/images/authorDH.png"></image>
      <text class="icon3 icon9 iconfont icon-3 iconCount"></text>
      <text class="authorName">余秋雨</text>
      <text class="writer-name fansC">8888粉丝</text>
    </view>
  </view>
  <view class="popular">
    <view class="classification">
      <text class="rank">{{rank}}</text>
      <view>
        <text class="see">{{all}}  </text>
        <text class="arrow iconfont icon-you"></text>
      </view>
    </view>
    <view class="tom">
      <swiper class="classification-bottom" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}">
        <block wx:for="{{list1}}" wx:key="idx" wx:for-index="idx" wx:for-item="item">
          <swiper-item class="swi">
            <image class="imgs" src="{{item.touxiang}}"></image>
            <text class="type">{{item.name}}</text>
            <text class="{{item.follow ? 'follow' : 'follows'}}" bindtap="already">{{item.follow ? '已关注' : '+ 关注'}}</text>
          </swiper-item>
        </block>
      </swiper>
    </view>


  </view>
  <view class="popular">
    <view class="classification">
      <text class="rank">{{rank1}}</text>
      <view>
        <text class="see">{{all}}  </text>
        <text class="arrow iconfont icon-you"></text>
      </view>
    </view>
    <view class="tom">
      <swiper class="classification-bottom" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}">
        <block wx:for="{{list1}}" wx:key="idx" wx:for-index="idx" wx:for-item="item">
          <swiper-item class="swi">
            <image class="imgs" src="{{item.touxiang}}"></image>
            <text class="type">{{item.name}}</text>
            <text class="{{item.follow ? 'follow' : 'follows'}}" bindtap="already">{{item.follow ? '已关注' : '+ 关注'}}</text>
          </swiper-item>
        </block>
      </swiper>
    </view>
  </view>
  <view class="classification">
    <text class="rank">{{rank2}}</text>
    <view>
      <text class="see">{{all}}  </text>
      <text class="arrow iconfont icon-you"></text>
    </view>
  </view>
</view>