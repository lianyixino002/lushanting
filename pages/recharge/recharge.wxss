.indexOuter {
  height: 1300rpx;
  padding-top: 30rpx;
}

.indexOuter .balance {
  height: 320rpx;
  margin: 0 50rpx;
  background-color: #2b323b;
  border-radius: 20rpx;
  padding-left: 50rpx;
  padding-top: 60rpx;
}

.indexOuter .balance text {
  display: block;
}

.indexOuter .balance .myB {
  font-size: 45rpx;
  color: #75808d;
  margin-bottom: 50rpx;
}

.indexOuter .balance .count {
  font-size: 95rpx;
  color: #fff;
}

.indexOuter .money {
  width: 100%;
  height: 140rpx;
  font-size: 40rpx;
  color: #fff;
  background-color: #fb6894;
  position: absolute;
  bottom: 0;
  text-align: center;
  display: block;
  line-height: 140rpx;
}

.indexOuter .balance {
}

.indexOuter .balance .inp {
  height: 115rpx;
  color: #fff;
  font-size: 95rpx;
  vertical-align: middle;
  position: relative;
  border-bottom: 2rpx solid #75808d;
  margin-right: 50rpx;
}

.indexOuter .balance .inp text {
  display: inline-block;
  position: absolute;
  top: 0;
}

.indexOuter .balance input {
  width: 460rpx;
  height: 110rpx;
  display: inline-block;
  font-size: 95rpx;
  color: #fff;
  margin-left: 100rpx;
}
