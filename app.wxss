.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.topNav {
  padding: 0 48rpx;
  padding-bottom: 50rpx;
  display: flex;
  justify-content: space-between;
  padding-top: 30rpx;
}

.topNav text {
  color: #fff;
  font-size: 40rpx;
  line-height: 60rpx;
}
